<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.boby.livinghelper.app.example.ExampleActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marge_10dp"
        android:text="@string/example_show_request_result"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_request_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marge_10dp"
        android:text="@string/example_request_api"/>

</android.support.v7.widget.LinearLayoutCompat>
