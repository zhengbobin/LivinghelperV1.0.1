<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/top_rl"
        layout="@layout/public_title_bar" />

        <RelativeLayout
            android:id="@+id/rl_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marge_10dp"
            android:minHeight="@dimen/marge_80dp"
            android:background="@drawable/bg_white_radius_5">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marge_10dp"
                android:layout_marginLeft="@dimen/marge_10dp"
                android:layout_marginRight="@dimen/marge_10dp"
                android:text="用户："
                android:textColor="@color/common_text_gray_dark"
                android:textSize="@dimen/font_size_16" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitle"
                android:layout_margin="@dimen/marge_10dp"
                android:textColor="@color/common_text_gray_dark"
                android:textSize="@dimen/font_size_16"
                android:text="@string/jpush_message_content"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewShowDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textViewContent"
                android:drawablePadding="@dimen/marge_10dp"
                android:drawableRight="@mipmap/ic_arrow_right_gray"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/marge_10dp"
                android:layout_marginBottom="@dimen/marge_10dp"
                android:layout_marginRight="@dimen/marge_10dp"
                android:text="@string/show_detail"
                android:textColor="@color/common_text_gray_thin"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone"
                />

        </RelativeLayout>

</LinearLayout>